{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "POINTLESS_DEVELOPER_MODE": "ON"
      }
    },
    {
      "name": "rel",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dev-asan",
      "inherits": "dev",
      "description": "dev-asan",
      "cacheVariables": {
        "POINTLESS_ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "dev-tsan",
      "inherits": "dev",
      "description": "dev-tsan",
      "environment": {
        "CXX": "clang++",
        "CC": "clang"
      },
      "cacheVariables": {
        "POINTLESS_ENABLE_TSAN": "ON"
      }
    }
  ]
}
