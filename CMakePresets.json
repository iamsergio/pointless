{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "POINTLESS_DEVELOPER_MODE": "ON"
      }
    },
    {
      "name": "rel",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dev-asan",
      "inherits": "dev",
      "description": "dev-asan",
      "cacheVariables": {
        "POINTLESS_ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "clang",
      "hidden": true,
      "environment": {
        "CXX": "clang++",
        "CC": "clang"
      }
    },
    {
      "name": "dev-tsan",
      "inherits": [
        "dev",
        "clang"
      ],
      "description": "dev-tsan",
      "cacheVariables": {
        "POINTLESS_ENABLE_TSAN": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux-libcxx",
        "VCPKG_TARGET_ARCHITECTURE": "x64",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++"
      }
    }
  ]
}
